[Unit]
Description=Webapp
ConditionPathExists=/opt/csye6225/
After=network.target

[Service]
User=csye6225
Group=csye6225
WorkingDirectory=/opt/csye6225/app.js
ExecStart=/opt/csye6225/app.js
Restart=always
RestartSec=5
TimeoutSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225-Webapp

[Install]
WantedBy=multi-user.target